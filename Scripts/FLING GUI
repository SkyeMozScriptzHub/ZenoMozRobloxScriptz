-- Slide-in Animation:
game:GetService("TweenService"):Create(MainFrame, TweenInfo.new(0.8, Enum.EasingStyle.Bounce), {Position = UDim2.new(0.35,0,0.35,0)}):Play()

-- Sounds:
local clickSound = Instance.new("Sound", MainFrame)
clickSound.SoundId = "rbxassetid://1673280232"
local notifySound = Instance.new("Sound", MainFrame)
notifySound.SoundId = "rbxassetid://15675059323"
notifySound:Play()

-- Rainbow Glow Function:
local function rainbow(obj)
	coroutine.wrap(function()
		while task.wait() do
			for i = 0, 1, 0.01 do
				obj.Color = Color3.fromHSV(i,1,1)
				task.wait(0.03)
			end
		end
	end)()
end

-- Glow on Hold:
local function addGlow(button, defaultSize)
	local stroke = Instance.new("UIStroke")
	stroke.Parent = button
	stroke.Thickness = 0
	stroke.Color = Color3.fromRGB(255,255,255)

	button.MouseButton1Down:Connect(function()
		rainbow(stroke)
		game:GetService("TweenService"):Create(stroke, TweenInfo.new(0.2), {Thickness = 3}):Play()
		game:GetService("TweenService"):Create(button, TweenInfo.new(0.2), {Size = defaultSize + UDim2.new(0,5,0,5)}):Play()
	end)
	button.MouseButton1Up:Connect(function()
		game:GetService("TweenService"):Create(stroke, TweenInfo.new(0.2), {Thickness = 0}):Play()
		game:GetService("TweenService"):Create(button, TweenInfo.new(0.2), {Size = defaultSize}):Play()
	end)
	button.MouseLeave:Connect(function()
		game:GetService("TweenService"):Create(stroke, TweenInfo.new(0.2), {Thickness = 0}):Play()
		game:GetService("TweenService"):Create(button, TweenInfo.new(0.2), {Size = defaultSize}):Play()
	end)
end
addGlow(ToggleButton, ToggleButton.Size)
addGlow(DiscordButton, DiscordButton.Size)

-- Copy Discord Link:
DiscordButton.MouseButton1Click:Connect(function()
	if setclipboard then
		setclipboard("https://discord.gg/uzdBtY2BYf")
	end
	game.StarterGui:SetCore("SendNotification", {
		Title = "Copied!",
		Text = "Discord link copied to clipboard",
		Duration = 3
	})
	clickSound:Play()
end)

-- Fling Variables:
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local hiddenfling = false
local flingThread
local flingPower = 10000

-- Update fling power from textbox:
FlingBox.FocusLost:Connect(function(enterPressed)
	if enterPressed then
		local val = tonumber(FlingBox.Text)
		if val and val > 0 then
			flingPower = val
		else
			FlingBox.Text = tostring(flingPower)
		end
	end
end)

-- Fling Function:
local function fling()
	local lp = Players.LocalPlayer
	local c, hrp, vel, movel = nil, nil, nil, 0.1
	while hiddenfling do
		RunService.Heartbeat:Wait()
		c = lp.Character
		hrp = c and c:FindFirstChild("HumanoidRootPart")
		if hrp then
			vel = hrp.Velocity
			hrp.Velocity = vel * flingPower + Vector3.new(0, flingPower, 0)
			RunService.RenderStepped:Wait()
			hrp.Velocity = vel
			RunService.Stepped:Wait()
			hrp.Velocity = vel + Vector3.new(0, movel, 0)
			movel = -movel
		end
	end
end

-- Toggle Fling:
ToggleButton.MouseButton1Click:Connect(function()
	clickSound:Play()
	hiddenfling = not hiddenfling
	if hiddenfling then
		ToggleButton.Text = "ON"
		ToggleButton.BackgroundColor3 = Color3.fromRGB(255,255,255)
		ToggleButton.TextColor3 = Color3.fromRGB(0,0,0)
		flingThread = coroutine.create(fling)
		coroutine.resume(flingThread)
	else
		ToggleButton.Text = "OFF"
		ToggleButton.BackgroundColor3 = Color3.fromRGB(100,100,100)
		ToggleButton.TextColor3 = Color3.fromRGB(0,0,0)
	end
end)

-- Draggable:
local UserInputService = game:GetService("UserInputService")
local dragging, dragInput, dragStart, startPos
TopBar.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		dragging = true
		dragStart = input.Position
		startPos = MainFrame.Position
		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragging = false
			end
		end)
	end
end)
TopBar.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
		dragInput = input
	end
end)
UserInputService.InputChanged:Connect(function(input)
	if input == dragInput and dragging then
		local delta = input.Position - dragStart
		MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
	end
end)

-- SMS Circle Button:
SMSButton.Parent = ScreenGui
SMSButton.Size = UDim2.new(0,50,0,50)
SMSButton.Position = UDim2.new(0.05,0,0.5,0)
SMSButton.BackgroundColor3 = Color3.fromRGB(20,20,20)
SMSButton.Text = "Zeno"
SMSButton.TextColor3 = Color3.fromRGB(255,255,255)
SMSButton.Font = Enum.Font.FredokaOne
SMSButton.TextSize = 18
UICornerSMS.CornerRadius = UDim.new(0,25)
UICornerSMS.Parent = SMSButton

-- Draggable SMS Button:
local dragSMS, dragInputSMS, dragStartSMS, startPosSMS
SMSButton.InputBegan:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
		dragSMS = true
		dragStartSMS = input.Position
		startPosSMS = SMSButton.Position
		input.Changed:Connect(function()
			if input.UserInputState == Enum.UserInputState.End then
				dragSMS = false
			end
		end)
	end
end)
SMSButton.InputChanged:Connect(function(input)
	if input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch then
		dragInputSMS = input
	end
end)
UserInputService.InputChanged:Connect(function(input)
	if input == dragInputSMS and dragSMS then
		local delta = input.Position - dragStartSMS
		SMSButton.Position = UDim2.new(startPosSMS.X.Scale, startPosSMS.X.Offset + delta.X, startPosSMS.Y.Scale, startPosSMS.Y.Offset + delta.Y)
	end
end)

-- SMS Button Toggle GUI:
local guiVisible = true
SMSButton.MouseButton1Click:Connect(function()
	guiVisible = not guiVisible
	if guiVisible then
		game:GetService("TweenService"):Create(MainFrame, TweenInfo.new(0.5, Enum.EasingStyle.Bounce), {Position = UDim2.new(0.35,0,0.35,0)}):Play()
	else
		game:GetService("TweenService"):Create(MainFrame, TweenInfo.new(0.5, Enum.EasingStyle.Quad), {Position = UDim2.new(0.35,0,1.5,0)}):Play()
	end
	clickSound:Play()
end)
